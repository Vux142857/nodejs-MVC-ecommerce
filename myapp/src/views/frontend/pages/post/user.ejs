<div class="content-wrap pb-0">
  <div class="container">
    <div class="user-info">
      <h1>User Information</h1>
      <div class="user-details">
        <label for="name">Name: <%= userInfo.name %></label>
        <span id="name"></span>
      </div>
      <div class="user-details">
        <label for="email">Email: <%= userInfo.email %></label>
        <span id="email"></span>
      </div>
      <div class="user-details">
        <label for="address">Address: <%= userInfo.address %></label>
        <span id="address"></span>
      </div>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table m-0">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>User's email</th>
              <th>Total</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% orderLatest.forEach(item =>{ %>
            <tr>
              <td><%= item.orderID %></td>
              <td><%= item.customer.email%></td>
              <td>$<%= item.total %></td>
              <td id="<%= item.id %>">
                <% let statusClass = ''; switch (item.status) { case
                "processing": statusClass = "btn btn-block btn-warning"; break;
                case "cancelled": statusClass = "btn btn-block btn-danger";
                break; case "done": statusClass = "btn btn-block btn-info";
                break; default: break; } %>
                <a href="#" class="<%= statusClass %>">
                  <span class="label"> <%= item.status %> </span>
                </a>
              </td>
            </tr>
            <%}) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<style>
  .user-info {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ffcc00; /* Neon yellow border */
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(255, 204, 0, 0.2); /* Neon yellow glow */
  }

  .user-details {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  .user-details label {
    min-width: 120px;
    font-weight: bold;
    margin-right: 10px;
    color: #ffcc00; /* Neon yellow label text color */
  }

  .user-details span {
    color: #fff; /* White user information text color */
  }

  .user-info h1 {
    color: #ffcc00; /* Neon yellow heading text color */
    text-align: center;
    margin-bottom: 20px;
  }

  /* Neon yellow hover effect for links */
  .user-info a:hover {
    color: #ffcc00;
    text-decoration: underline;
  }
</style>
