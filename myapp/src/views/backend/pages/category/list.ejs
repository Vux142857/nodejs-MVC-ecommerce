<% include ./../../helper/filter-status %> <% include ./../../helper/search-form
%> <% include ./../../helper/action %> <% include ./../../helper/status %> <%
include ./../../helper/show-items %> <% include ./../../helper/pagination %><% include ./../../helper/special %>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header bg-dark">
                <h3 class="card-title">Filter</h3>
              </div>
              <div class="card-body">
                <div
                  class="btn-group"
                  role="group"
                  aria-label="Basic outlined example"
                >
                  <%= filterStatusHelper(statusFilter, keyword) %>
                </div>
                <%= formSearch(currentStatus) %>
              </div>
            </div>
          </div>
          <div class="card-body">
            <form
              role="form"
              class="form-inline zt-form"
              id="zt-form"
              action=""
              method="post"
            >
              <%- actionHelper(collection) %>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>
                      <div class="form-check">
                        <input type="checkbox" class="cbAll" />
                      </div>
                    </th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Ordering</th>
                    <th>Is Menu</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <%= showItemsHelper(items, keyword, collection) %>
                </tbody>
              </table>
            </form>
          </div>
          <%- paginationHelper(statusFilter, itemsPerPage, currentPage,
          currentStatus) %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Notify-catch errors -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<% if (typeof messages.successMessage !== 'undefined' && messages.successMessage !== '') {
  messages.successMessage.forEach(element => { %>
  <button class="notify" onclick="generateNotify('<%= element%>')" hidden>Click Me</button>
 <% });%>
<% } %>
<script>
  $(function(){
     $('.notify').click();
  });
  </script>
