<% include ./../../helper/status %>
<div class="card">
  <div class="card-header border-transparent">
    <h3 class="card-title">Latest Orders</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <i class="fas fa-minus"></i>
      </button>
      <button type="button" class="btn btn-tool" data-card-widget="remove">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>

  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table m-0">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>User's email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% orderList.forEach(item =>{ %>
          <tr>
            <td><a href=""><%= item.orderID %></a></td>
            <td><%= item.customer.email%></td>
            <td id="<%= item.id %>">
              <%= statusHelper("order",item.status, item.id) %>
            </td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card-footer clearfix">
    <a href="javascript:void(0)" class="btn btn-sm btn-info float-left"
      >Place New Order</a
    >
    <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right"
      >View All Orders</a
    >
  </div>
</div>
